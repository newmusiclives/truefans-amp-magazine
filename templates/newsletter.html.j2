<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ newsletter_name }} â€” Issue #{{ issue_number }}</title>
    <style>
        {{ css }}
    </style>
</head>
<body>
    <div class="newsletter-wrapper">
        <div class="header">
            {% if header_image_url %}
            <img src="{{ header_image_url }}" alt="{{ newsletter_name }}" class="header-image">
            {% else %}
            <h1>{{ newsletter_name }}</h1>
            {% endif %}
        </div>

        {% if intro_copy %}
        <div class="intro-copy">
            {{ intro_copy }}
        </div>
        {% endif %}

        {% for section in sections %}
        {{ section.html }}
        {% endfor %}

        <div class="footer">
            {% if footer_html %}
            {{ footer_html }}
            {% else %}
            <p>&copy; {{ newsletter_name }} | You received this because you subscribed.</p>
            {% endif %}
            <p><a href="{{ unsubscribe_url | default('#') }}">Unsubscribe</a></p>
        </div>
    </div>
</body>
</html>
